<h4 class="title" style="text-align: center;font-size: xx-large;">Comments</h4>
<div class="container">
	<% @comments.each do |comment| %>
		<div class="card">
			<div class="card-body" style="background-color: cornsilk;">
				<h4 class="card-title"><%= link_to comment.commentable.name, article_path(comment.commentable),class: "sub-heading" %></h4>
				<p class="card-text">
					<strong>Comment:</strong>
						<%= comment.commenter %>
				</p>
				<p class="card-text">
					<strong>Comment:</strong>
						<%= comment.body %>
				</p>
			</div> 
		</div>
		<br>
	<% end %>
</div>
		
<%= will_paginate @comments,class: "pagination" %>
      
      
<style type="text/css">
 .pagination {
  display: inline-block;
}

.pagination a {
  color: black;
  float: left;
  padding: 8px 16px;
  text-decoration: none;
}

</style>